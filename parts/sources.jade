template(name='sources')
    .ui.stackable.padded.grid
        .four.wide.column
            .ui.inline.header 
                +i name='farm'
                |sources
            .ui.basic.circular.icon.button.add_source
                i.large.plus.icon
        .twelve.wide.column
            .ui.cards
                each model_docs_helper 'source'
                    .ui.card
                        a(href="/source/#{_id}") 
                            img.ui.image(src="{{c.url image_id width=400 height=300 crop='pad'}}")
                        a.content(href="/source/#{_id}") 
                            .ui.header 
                                |#{title}
                            each source_product
                                .ui.header #{title}
                            // |added #{when} by #{_author_username}
                
                
template(name='user_sources')
    .ui.inline.header 
        +i name='farm'
        |user sources
    .ui.basic.circular.icon.button.send_source
        i.large.plus.icon
    .ui.padded.stackable.two.column.grid
        .column
            .ui.header 
                +i name='sent--v2'
                |favorites 
            .ui.stackable.cards.scrolling
                each sent_sources 
                    .ui.card
                        .content
                            a(href="/source/#{_id}") 
                                img.ui.image(src="{{c.url image_id width=400 height=300 crop='pad'}}")
    
                            .ui.header 
                                |#{amount} #{recipient_username}
                            // |created #{when}
                            |sent {{from_now sent_timestamp}}
                            small {{cal_time sent_timestamp}}
                            a.ui.circular.icon.button(href='/source/#{_id}')
                                i.large.chevron.right.icon
                            
        .column
            .ui.header 
                +i name='gift--v1'
                |received
            .ui.stackable.cards.scrolling
                each received_sources
                    .ui.card
                        .content
                            a(href="/source/#{_id}") 
                                img.ui.image(src="{{c.url image_id width=400 height=300 crop='pad'}}")
                            .ui.header 
                                |#{amount} #{_author_username}
                            |received {{from_now sent_timestamp}}
                            small {{cal_time sent_timestamp}}
                            a.ui.circular.icon.button(href='/source/#{_id}')
                            i.ui.large.link.circular.chevron.right.icon.edit_address
                
                
                
template(name='source_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .six.wide.column
                    .ui.inline.header
                        i.pencil.icon
                        | #{title}
                        small source edit
                    +text_edit key='title' label='title' direct=true
                    +image_edit key='image_id' label='image' direct=true icon='image'
                    div
                    +link_edit key='link' label='link' direct=true icon='link'
                    div
                    +text_edit key='location' label='location' direct=true icon='marker'
                .ten.wide.column
                    div
                    +array_edit key='tags' label='tags' direct=true icon='tags'
                    +html_edit key='description' label='description' direct=true icon='content'
                    if can_delete
                        .ui.red.button.delete_source
                            i.remove.icon   
                            | delete
                    a.ui.large.icon.green.button(href="/source/#{_id}" title='save product')
                        i.checkmark.big.icon
                
                
template(name='source_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.basic.circular.icon.button(href="/sources")
                        +ibig name='farm'
                    
                    .ui.inline.header
                        | #{title}
                        small source
                    if can_edit 
                        a.ui.circular.icon.button(href="/source/#{_id}/edit")
                            i.pencil.icon
                    +image_view key='image_id' label='image' direct=true
                    div
                .twelve.wide.column
                    div
                    +array_view key='tags' label='tags' direct=true
                    +html_view key='notes' label='description' direct=true
                    if can_delete
                        .ui.red.button.delete_source
                            i.remove.icon   
                            | delete
                    +comments                
