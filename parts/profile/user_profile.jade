template(name='user_layout')
    // img.ui.fluid.image.checkin_banner(src="{{c.url 'cafe'}}")
    +nav
    .ui.bottom.attached.pushable.segment
        +left_sidebar
        +right_sidebar
        #main_area.global_container.pusher.scrollin
            with user_from_username_param
                .ui.stackable.padded.grid
                    .row
                        //- img.ui.image.checkin_banner(src="{{c.url banner_image width=1000 height=1000 crop='crop'}}")
                        .four.wide.column
                            a.item.mobile.hidden(href="/user/#{user_from_username_param.username}")
                                img.ui.centered.small.image(src="{{c.url image_id height=300 width=300 gravity='face' crop='fill'}}")
                            .spacer
                            a(href="/user/#{user.username}")
                                .ui.center.aligned.header
                                    strong #{user.name}
                                    //- 
                                    //- strong #{user.first_name} #{user.last_name}
                                    //- small @#{user.username}        
                            a.ui.center.aligned.inline.header.mobile.hidden(href="/user/#{user_from_username_param.username}/credit" title='credit')
                                |{{fixed user.credit}}c
                            .ui.two.column.middle.aligned.grid.mobile.only
                                .column
                                    img.ui.small.inline.image.mobile.only(src="{{c.url image_id height=300 width=300 gravity='face' crop='fill'}}")
                                .column
                                    .ui.inline.header
                                        strong #{user.name}
                                        //- small @#{user.username}        
                                    a.ui.inline.header(href="/user/#{user_from_username_param.username}/credit" title='credit')
                                        //- +i name='coins'
                                        //- i.coins.icon
                                        |{{fixed user.credit}}c
                            .ui.vertical.fluid.compact.menu
                                a.item(href="/user/#{username}" class="{{isActiveRoute regex='user_dashboard'}}")
                                    +i name='dashboard' cl='ui avatar image'
                                    |dashboard
                                a.item(href="/user/#{username}/credit" class="{{isActiveRoute regex='user_credit'}}")
                                    +i name='money' cl='ui avatar image'
                                    |credit
                                a.item(href="/user/#{username}/orders" class="{{isActiveRoute 'user_orders'}}")
                                    +i name='check' cl='ui avatar image'
                                    |orders
                                a.item(href="/user/#{username}/friends" class="{{isActiveRoute 'user_friends'}}")
                                    +i name='friends' cl='ui avatar image'
                                    |friends
                                a.item(href="/user/#{username}/cart" class="{{isActiveRoute 'user_cart'}}")
                                    +i name='shopping-cart' cl='ui avatar image'
                                    |cart
                                a.item(href="/user/#{username}/downloads" class="{{isActiveRoute 'user_downloads'}}")
                                    +i name='download' cl='ui avatar image'
                                    |downloads
                                a.item(href="/user/#{username}/subscriptions" class="{{isActiveRoute 'user_subscriptions'}}")
                                    +i name='clock' cl='ui avatar image'
                                    |subscriptions
                                a.item(href="/user/#{username}/addresses" class="{{isActiveRoute 'user_addresses'}}")
                                    +i name='marker' cl='ui avatar image'
                                    |addresses
                                a.item(href="/user/#{username}/giftcards" class="{{isActiveRoute 'user_giftcards'}}")
                                    +i name='certificate' cl='ui avatar image'
                                    |gift cards
                            if is_current_user
                                a.ui.basic.compact.button(href="/user/#{user_from_username_param.username}/edit" title='profile settings')
                                    i.cog.icon
                                    |edit profile
                            else if is_admin
                                a.ui.basic.compact.button(href="/user/#{user_from_username_param.username}/edit" title='profile settings')
                                    +i name='settings' cl='ui avatar image'
                                    |edit profile
                            if is_current_user
                                .ui.basic.compact.button.logout
                                    i.sign.out.alternate.icon
                                    |log out
                                //- a.ui.basic.button.logout_other_clients(href="#" title='logout other clients')
                                //-     i.globe.icon
                                //-     |log out other clients
                        .twelve.wide.column
                                
                
                            div.global_container
                                .spacer
                                +yield



template(name='user_dashboard')
    .ui.four.stackable.cards
        .ui.card
            .content
                .ui.header 
                    i.dashboard.icon
                    |dashboard
        .ui.card
            .content
                .ui.header 
                    +i name='line-chart' cl='ui avatar image'
                    |stats
        .ui.card
            .content
                .ui.header 
                    +i name='groups' cl='ui avatar image'
                    |friends
                .ui.big.green.icon.button
                    i.checkmark.icon
        .ui.card
            .content
                .ui.header 
                    +i name='envelope' cl='ui avatar image'
                    |mail
                .ui.big.green.icon.circular.button
                    i.plus.icon
        .ui.card
            .content
                a.header(href="/user/#{username}/subscriptions")
                    +i name='clock' cl='ui avatar image'
                    |subscriptions
                each user_subscriptions
                    .ui.header #{when}
        .ui.card
            .content
                .ui.header
                    +i name='check' cl='ui avatar image'
                    |orders
        .ui.card
            .content
                .ui.header 
                    i.money.icon
                    |payments
                .ui.list 
                    .item $4
                    .item $4
                    .item $4
                    .item $4
                    .item $4
        .ui.card
            .content
                .ui.header
                    i.tasks.icon
                    |tasks