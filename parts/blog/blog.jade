template(name='set_post_sort_key')
    .item.set_sort
        if color
            .ui.label(class=color) #{label}
        else 
            if emoji
                em(data-emoji=emoji)
            else if icon
                i.icon(class=icon)
            |#{label}
        

template(name='set_view_mode_post')
    .item.set_view
        i.icon(class=icon)
        |#{title}


template(name='set_post_limit')
    .item.set_limit #{amount}
