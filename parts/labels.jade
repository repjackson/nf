template(name='labels')
    .ui.stackable.padded.grid
        .four.wide.column.scrollin
            .ui.inline.header 
                +i name='tags'
                |#{label_docs.count}
                |labels
            // .ui.small.inline.header 
            //     |#{label_total}
            // +cfacet model='_week_number'
            .ui.icon.input(title='search product')
                if current_search
                    i.remove.red.link.icon.zoomer.clear_search
                else
                    i.search.icon
                input.search_product(type='text' placeholder='product' value=current_search)
            // .scrolling
            if picked_color
                .ui.button.unpick_color(style="background-color:##{picked_color}" )
                    |##{picked_color}
            else 
                each color_results
                    button.ui.big.circular.button.pick_color(style="background-color:##{name}" title="#{count} #{name}")
                        // |#{name}
                        // |#{count}
            div
            // .ui.circular.basic.button
            +i name='vegan-symbol'
            // .ui.inline.header 
                // |vegan
            // +cfacet model='_week_number'
            each vegan_results
                // .ui.button.pick_vegan
                //     |#{name}
                //     small #{count}
                if name 
                    .ui.icon.circular.button.pick_vegan(title=count)
                        // |#{name}
                        i.large.checkmark.icon
                else
                    .ui.icon.circular.button.pick_vegan(title=count)
                        i.remove.large.icon
                        // small #{count}-
            div
            .ui.circular.basic.button
                +i name='kitchen'
            div
            +i name='no-gluten'
            // .ui.inline.header 
                // |gluten free
            // +cfacet model='_week_number'
            each gluten_results
                if name 
                    .ui.icon.circular.button.pick_gluten(title=count)
                        // |#{name}
                        i.large.checkmark.icon
                else
                    .ui.icon.circular.button.pick_gluten(title=count)
                        i.remove.large.icon
                        // small #{count}-
            // .ui.small.inline.header
            //     i.download.icon
            //     |'Info for Labels'
            // // +cfacet model='_product'
            if in_dev 
                div
                i.code.icon
                .ui.icon.button.clear_labels 
                    i.remove.icon
                .ui.input.import
                    input(type='file' accept='.csv')
        .twelve.wide.column
            .ui.doubling.centered.four.cards.scrolling
                if label_docs.count
                    each label_docs
                        +label_card
                else 
                    .ui.center.aligned.basic.segment 
                        .ui.hidden.divider
                        .ui.hidden.divider
                        .ui.hidden.divider
                        .ui.hidden.divider
                        i.tag.massive.loading.red.icon
                            
                            
template(name='label_card')
    .card(style="background-color:##{color}")
        if related_product.image_id
            img.ui.image(src="{{c.url related_product.image_id width=500 height=500 gravity='face' crop='fill'}}")
        .content
            a.ui.header.goto_product.zoomer.fly_left #{name}
            if retail_price
                .ui.inline.header
                    |$#{retail_price}
            .ui.inline.small.grey.header #{query_params}
            if gf
                // div
                +i name='no-gluten' cl='pointer zoomer' title='gluten free'
                // |gluten free
            if vegan
                // div
                +i name='vegan-symbol' cl='pointer zoomer' title='vegan'
                // |vegan
            if origin.length
                // div
                .ui.inline.small.header
                    // +i name='marker' cl='pointer zoomer' title='local'
                    // i.red.marker.icon
                    |#{origin}
            if local
                // div
                +i name='marker' cl='pointer zoomer' title='local'
                // |local
            if description
                i.about.icon
                |#{description}
            if url
                a.ui.circular.icon.button(href=url target='_blank' title=url)
                    // |#{url}
                    i.external.large.icon
            if ingredients
                +i name='ingredients'
                |#{ingredients}
                    
            .item 
                if cogs
                    |cogs: #{cogs}
            // .item 
            //     if gf
            //         |gf: #{gf}
            .ui.basic.label 
                if goes_well_with
                    |goes_well_with: #{goes_well_with}
            .ui.basic.label 
                if net_weight_
                    |net_weight_: #{net_weight_}
            .ui.basic.label 
                if net_weight_
                    |net_weight_: #{net_weight_}
            .ui.basic.label 
                if nude_made
                    |nude_made: #{nude_made}
            .ui.basic.label 
                if packaging
                    |packaging: #{packaging}
            .ui.basic.label 
                if price
                    .ui.inline.header $#{price}
            .ui.basic.label 
                if rescued
                    |rescued: #{rescued}
            .ui.basic.label 
                if shelf_life
                    |shelf_life: #{shelf_life}
            .ui.basic.label 
                if size_
                    |size_: #{size_}
            .ui.basic.label 
                if we_love_it_in
                    |we_love_it_in: #{we_love_it_in}
            .ui.basic.label 
                if wholefoods_retail_price
                    |wholefoods_retail_price: #{wholefoods_retail_price}
            .ui.basic.label 
                if wholesale_price
                    |wholesale_price: #{wholesale_price}
            +print_this
            i.refresh.icon.link.calc.pointer.zoomer


