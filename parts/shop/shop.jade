template(name='set_product_sort_key')
    .item.set_sort
        if color
            .ui.label(class=color) #{label}
        else 
            if emoji
                em(data-emoji=emoji)
            else if icon
                i.icon(class=icon)
            |#{label}
        

template(name='set_view_mode_product')
    .item.set_view
        i.icon(class=icon)
        |#{title}


template(name='set_product_limit')
    .item.set_limit #{amount}



