template(name='questions')
    .ui.stackable.padded.grid
        .four.wide.column.scrolling
            .ui.header
                i.question.icon
                |#{question_total}
                |questions
            .ui.circular.icon.button.add_question
                i.large.plus.icon
            a.ui.button(href="/newsletter")
                |newsletter
        .twelve.wide.column
            unless subs_ready
                i.big.loading.refresh.icon
            .scrolling
                if questions.count
                    .ui.four.doubling.cards
                        each questions
                            +question_card
                else 
                    .ui.center.aligned.basic.segment 
                        i.money.big.grey.loading.icon
                                
template(name='newsletter')
    .ui.container.centered.grid
        .twelve.wide.column
            .ui.header newsletter signup
            .ui.small.header name
            .ui.big.fluid.input
                i.user.icon
                input(type='text')
            .ui.small.header email
            .ui.big.fluid.input
                i.mail.icon
                input(type='email')
            .ui.big.fluid.green.button.submit_form
                i.big.checkmark.icon
                                
template(name='question_card')
    a.card(href="/question/#{_id}")
        .content
            .ui.header #{title}

template(name='question_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column 
                    if in_dev 
                        a.ui.icon.circular.button(href="/question/#{_id}/edit")
                            i.pencil.large.icon
                        +print_this
                .eight.wide.column
                    h1.ui.header #{title} 
                    .ui.two.column.fluid.grid 
                        .column
                            .ui.fluid.green.inverted.segment.huge.pick_yes.zoomer.pointer
                                .ui.header.huge yes
                        .column
                            .ui.fluid.red.inverted.segment.huge.pick_no.zoomer.pointer
                                .ui.header.huge no
                        
                
                
template(name='question_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    .ui.header 
                        small editing question
                        strong #{title}
                    a.ui.big.icon.green.button(href="/#{model}/#{_id}" title='save')
                        i.checkmark.big.icon
                    +remove_button
                    +image_edit key='image_id' label='image'
                    +array_edit key='tags' label='tags' icon='tags'
                .seven.wide.column.scrolling
                    +text_edit key='title'
                    +html_edit key='body' label='body' icon='content'